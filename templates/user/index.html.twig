{% extends 'base.html.twig' %}

{% block title %}{{ 'user_index'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'user_index'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'id'|trans }}</th>
                <th>{{ 'email'|trans }}</th>

                <th>{{ 'roles'|trans }}</th>
                <th>{{ 'name'|trans }}</th>
                <th>{{ 'created_at'|trans }}</th>
                <th>{{ 'actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>

                <td>{{ user.roles }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    {% if app.user %}
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">{{ 'show'|trans }}</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">{{ 'edit'|trans }}</a>
                        <a href="{{ path('app_user_password', {'id': user.id}) }}">{{ 'change_password_user'|trans }}</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">{{ 'no_records_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% if app.user %}
    <a href="{{ path('app_user_new') }}">{{ 'create_new'|trans }}</a>
{% endif %}

    <a href="{{ path('app_home') }}">{{ 'back_to_main_page'|trans }}</a>

{% endblock %}
